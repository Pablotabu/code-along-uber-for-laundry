<h2> Log In </h2>

{{#if errorMessage}}
  <p class="error-message">
    {{ errorMessage }}
  </p>
{{/if}}

<form action="/login" method="post">
  <div>
    <label for="credentials-input"> Email/Username </label>
    <input type="text" name="credentials" id="email-input"
      placeholder="direction@domain.topleveldomain">
  </div>

  <div>
    <label for="password-input"> Password </label>
    <input type="password" name="password" id="password-input"
      placeholder="NombreFechaDeNacimiento">
  </div>

  <button> Log In </button>
</form>

<p>
  Don't have an account?
  <a href="/signup">
    Create an account.
  </a>
</p>